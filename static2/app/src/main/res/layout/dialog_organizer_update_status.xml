<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@color/gray_light">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Event status"
        android:layout_gravity="center_horizontal"
        android:textSize="@dimen/text_size_title"
        android:textStyle="bold"
        android:textColor="@color/black" />

    <RadioGroup
        android:id="@+id/rg_event_status"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:paddingHorizontal="14dp"
        android:background="@drawable/rounded_sm"
        android:backgroundTint="@color/white">

        <LinearLayout
            android:id="@+id/btn_event_status_ongoing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp"
            android:gravity="center_vertical">

           <LinearLayout
               android:layout_width="0dp"
               android:layout_weight="1"
               android:layout_height="wrap_content"
               android:gravity="center_vertical">
               <ImageView
                   android:layout_width="30dp"
                   android:layout_height="30dp"
                   android:src="@drawable/ic_event_available_24dp_000000_fill0_wght400_grad0_opsz24"
                   app:tint="@color/green_deep" />
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:layout_marginLeft="12dp"
                   android:text="Ongoing"
                   android:textColor="@color/text_primary"
                   android:textStyle="bold"
                   android:textSize="@dimen/text_size_subtitle"/>
           </LinearLayout>

            <RadioButton
                android:id="@+id/rb_event_status_ongoing"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:gravity="center"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_light"/>

        <LinearLayout
            android:id="@+id/btn_event_status_closed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_event_busy_24dp_000000_fill0_wght400_grad0_opsz24"
                    app:tint="@color/red_deep" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="Closed"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_subtitle"/>
            </LinearLayout>

            <RadioButton
                android:id="@+id/rb_event_status_closed"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:gravity="center"/>


        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gray_light"/>

        <LinearLayout
            android:id="@+id/btn_event_status_upcoming"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingVertical="14dp"
            android:gravity="center_vertical">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">
                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:src="@drawable/ic_event_upcoming_24dp_000000_fill0_wght400_grad0_opsz24"
                    app:tint="@color/text_secondary" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="Upcoming"
                    android:textColor="@color/text_primary"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_subtitle"/>
            </LinearLayout>

            <RadioButton
                android:id="@+id/rb_event_status_upcoming"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:gravity="center"/>

        </LinearLayout>

    </RadioGroup>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="end"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginRight="6dp"
            android:text="Cancel"
            android:textColor="@color/text_primary"
            style="@style/Widget.Material3.Button.TextButton" />

        <Button
            android:id="@+id/btn_confirm"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:text="Conrim"
            android:layout_marginStart="8dp"
            style="@style/Widget.Material3.Button"
            android:backgroundTint="@color/text_primary"/>

    </LinearLayout>

</LinearLayout>