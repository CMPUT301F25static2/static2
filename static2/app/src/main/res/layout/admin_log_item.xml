<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/cardview_light_background"
    android:padding="16dp"
    android:layout_marginBottom="12dp"
    android:elevation="2dp">

    <TextView
        android:id="@+id/logID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification ID"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@color/black" />

    <TextView
        android:id="@+id/logDetails"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notification Details"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/logTimeFrame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date and time notification was sent"
        android:textColor="@color/black"
        android:textSize="14sp"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/logEvent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Name of event"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:textSize="13sp"
        android:layout_marginTop="6dp" />
</LinearLayout>
