<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context="com.ualberta.eventlottery.ui.home.entrant.EventDetailsFragment">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/back_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:src="@drawable/baseline_arrow_back_24"
        android:contentDescription="Back" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/back_button">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Event Title -->
            <TextView
                android:id="@+id/event_details_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                tools:text="PickleBall Tournament" />

            <!-- Event Description -->
            <TextView
                android:id="@+id/event_details_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:textSize="16sp"
                tools:text="A fun and exciting tournament for all skill levels! Come join us for a day of friendly competition and fun." />

            <!-- Event Date -->
            <TextView
                android:id="@+id/event_details_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                tools:text="Nov 07, 2025 - Nov 09, 2025" />

            <!-- Event Time -->
            <TextView
                android:id="@+id/event_details_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                tools:text="Starts at 09:00 AM daily" />

            <!-- Event Location -->
            <TextView
                android:id="@+id/event_details_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:drawablePadding="8dp"
                android:gravity="center_vertical"
                android:textSize="16sp"
                tools:text="Main Gymnasium, University Campus" />

            <!-- VVVV ADD THIS BUTTON VVVV -->
            <Button
                android:id="@+id/register_button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Register"
                android:textSize="16sp" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
