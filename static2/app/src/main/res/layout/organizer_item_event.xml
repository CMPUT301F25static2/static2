                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_event_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Morning Yoga Session"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_body"
                            android:layout_marginRight="8dp"/>

                        <TextView
                            android:id="@+id/tv_event_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="2dp"
                            android:paddingHorizontal="8dp"
                            android:text="Upcoming"
                            android:textColor="@color/green_deep"
                            android:background="@drawable/rounded_md"
                            android:backgroundTint="@color/green_light"
                            android:textSize="12sp"
                            android:textStyle="bold"/>

                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btn_event_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_more_horiz_24dp_000000_fill0_wght400_grad0_opsz24"
                        app:tint="@color/text_secondary" />

                </LinearLayout>

                <TextView
                    android:id="@+id/tv_event_entrants_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Entrants: 148/200"
                    android:textSize="14dp"
                    android:textColor="@color/text_secondary" />

                <TextView
                    android:id="@+id/tv_event_registry_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="REGISTRATION OPEN"
                    android:layout_gravity="right"
                    android:textSize="14dp"
                    android:textColor="@color/green_deep"
                    android:textStyle="bold"
                    android:rotation="-8"/>

              <LinearLayout
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:orientation="vertical"
                  android:layout_marginTop="-16dp">
                  <TextView
                      android:id="@+id/tv_event_start_time"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:text="Start: 12:00AM, Oct 16, 2025"
                      android:textSize="14dp"
                      android:textColor="@color/text_secondary" />

                  <TextView
