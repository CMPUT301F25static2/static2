<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="58dp"
    android:padding="10dp"
    android:gravity="center_vertical">

    <!--    entrant name and joined time-->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!--        name of the entrant-->
        <TextView
            android:id="@+id/tv_entrant_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Emma Wilson"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <!--      joined/registered date    -->
            <TextView
                android:id="@+id/tv_entrant_joined_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joined  2 hours ago"
                android:textColor="@color/text_secondary"
                android:textSize="12sp" />
        </LinearLayout>


    </LinearLayout>

    <!--    status-->
    <TextView
        android:id="@+id/tv_entrant_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_status_accepted"
        android:paddingVertical="4dp"
        android:paddingHorizontal="10dp"
        android:text="Confirmed"
        android:textSize="12sp"
        android:textStyle="bold"
        android:textColor="@color/text_secondary" />

<!--    more button-->
    <ImageView
        android:id="@+id/btn_entrant_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_more_vert_24dp_000000_fill0_wght400_grad0_opsz24"
        app:tint="@color/text_secondary"
        android:layout_marginLeft="4dp"/>

</LinearLayout>