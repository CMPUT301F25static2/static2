<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/organizer_event"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardWaitingList"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="6dp"
        android:clipChildren="false"
        android:clipToPadding="false"
        app:cardBackgroundColor="@android:color/white"
        app:cardCornerRadius="14dp"
        app:cardElevation="6dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeWidth="0dp"
        tools:ignore="MissingConstraints">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="8dp">

            <!--            left-->
            <!--            <LinearLayout-->
            <!--                android:layout_width="50dp"-->
            <!--                android:layout_height="match_parent"-->
            <!--                android:gravity="center_vertical">-->
            <!--                <ImageView-->
            <!--                    android:layout_width="50dp"-->
            <!--                    android:layout_height="50dp"-->
            <!--                    android:src="@drawable/ic_self_improvement_24dp_000000_fill0_wght400_grad0_opsz24"-->
            <!--                    app:tint="@color/text_secondary"/>-->

            <!--            </LinearLayout>-->


            <!--            right-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginLeft="4dp">
                <!--            Top header-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_event_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Morning Yoga Session"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="@dimen/text_size_body"
                            android:layout_marginRight="8dp"/>

                        <TextView
                            android:id="@+id/tv_event_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingVertical="1dp"
                            android:paddingHorizontal="8dp"
                            android:text="open"
                            android:textColor="@color/green_deep"
                            android:background="@drawable/rounded_md"
                            android:backgroundTint="@color/green_light"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/btn_event_more"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_more_horiz_24dp_000000_fill0_wght400_grad0_opsz24"
                        app:tint="@color/text_secondary" />

                </LinearLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_event_from_to"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Oct 16 - Nov 16"
                        android:textSize="14dp"
                        android:textColor="@color/text_secondary" />

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="\@"
                        android:textColor="@color/text_secondary"
                        android:textSize="14dp"
                        app:layout_constraintStart_toEndOf="@+id/tv_event_from_to"
                        tools:layout_editor_absoluteY="0dp" />


                    <TextView
                        android:id="@+id/tv_event_session_start_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="10:00AM"
                        android:textColor="@color/text_secondary"
                        android:textSize="14dp"
                        app:layout_constraintStart_toEndOf="@+id/textView"
                        tools:layout_editor_absoluteY="0dp" />


                </androidx.constraintlayout.widget.ConstraintLayout>


                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/textView2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Entrants:"
                        android:textColor="@color/text_secondary"
                        android:textSize="14dp" />


                    <TextView
                        android:id="@+id/tv_event_entrants_number"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="4dp"
                        android:text="5/25"
                        android:textColor="@color/text_secondary"
                        android:textSize="14dp"
                        app:layout_constraintStart_toEndOf="@+id/textView2"
                        tools:layout_editor_absoluteY="0dp" />
                </androidx.constraintlayout.widget.ConstraintLayout>


                <!--                bottom options-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">

                    <!--                    draw btn-->
                    <LinearLayout
                        android:id="@+id/btn_action"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/rounded_sm"
                        android:backgroundTint="@color/text_primary"
                        android:paddingHorizontal="10dp"
                        android:paddingVertical="6dp"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="18dp"
                            android:layout_height="18dp"
                            android:src="@drawable/ic_dice_24dp_000000_fill0_wght400_grad0_opsz24"
                            app:tint="@color/white" />
                        <TextView
                            android:id="@+id/btn_action_text"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Register"
                            android:layout_marginLeft="2dp"
                            android:textColor="@color/white"
                            android:textStyle="bold"
                            android:textSize="12sp"/>

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>



    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
